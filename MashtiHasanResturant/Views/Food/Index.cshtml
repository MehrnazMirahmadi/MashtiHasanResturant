@using MashtiHasanRestaurant.DataLayer.Entities
@model List<Food>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered table-hover table-striped table-dark">
    <tr>
        <td>FoodId</td>
        <td>FoodName</td>
        <td>UnitPrice</td>
        <td>Ingredient</td>
        <td>Delete</td>
        <td>Detail</td>
    </tr>
    @foreach (var item in this.Model)
    {
        <tr>
            <td>@item.FoodId</td>
            <td>@item.FoodName</td>
            <td>@item.UnitPrice</td>
            <td>@item.Ingredient</td>
            <td>
                <form asp-action="Delete" asp-controller="Food" method="get">
                    <button asp-action="Delete" value="@item.FoodId" name="FoodId">Delete</button>
                </form>
            </td>
            <td>
                <form asp-action="DetailFood" method="get">
                   <input type="hidden" name="id" value="@item.FoodId" />
                    <button type="submit">Detail</button>
                </form>


            </td>
        </tr>
       
    }
</table>

