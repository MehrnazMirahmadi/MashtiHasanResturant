@using MashtiHasanRestaurant.Core.DTOs
@model IEnumerable<ShowGroupViewModel>

<ul class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="/Group/@item.CategoryId/@item.CategoryName">@item.CategoryName</a>
            <span class="badge bg-primary rounded-pill">@item.FoodCount</span>
        </li>
    }
</ul>